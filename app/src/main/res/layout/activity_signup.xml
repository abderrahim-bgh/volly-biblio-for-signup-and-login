<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bk"
    tools:context=".signup">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        android:padding="18dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hh"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstName0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:hint="first name"
            android:textColorHint="#fff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstName1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edttxt"
                android:inputType="text"
                android:textColor="#fff"

                >

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastname0"


            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:hint="lastName"
            android:textColorHint="#fff"

            android:transitionName="username_tran">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastName1"
                android:layout_width="match_parent"
                android:background="@drawable/edttxt"

                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="#fff">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:hint="Email"
            android:textColorHint="#fff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:background="@drawable/edttxt"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:textColor="#fff">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone0"


            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:hint="your Phone"
            android:textColorHint="#fff"

            android:transitionName="username_tran">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone1"
                android:layout_width="match_parent"
                android:background="@drawable/edttxt"

                android:layout_height="match_parent"
                android:inputType="phone"
                android:textColor="#fff">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass0"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:hint="password"
            android:textColorHint="#fff"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:background="@drawable/edttxt"
                android:textColor="#fff">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            android:text="Signup"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_gravity="right"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="0"
            android:layout_marginVertical="20dp"
            />


        <Button
            android:id="@+id/login_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:background="#00000000"
            android:text="Already have an account? LogIn"
            android:textColor="#102b6a"
            android:textSize="16dp"
            android:transitionName="login_signup_tran"
            />



    </LinearLayout>
    </ScrollView>
</LinearLayout>